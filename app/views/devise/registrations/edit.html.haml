.container
  %h2.form-title Edit #{resource_name.to_s.humanize}

  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-card" }) do |f|
    = render "devise/shared/error_messages", resource: resource

    .form-field
      = f.label :email, class: "form-label"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input"

    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      .form-info
        Currently waiting confirmation for: #{resource.unconfirmed_email}

    .form-field
      = f.label :password, class: "form-label"
      %i.form-hint (leave blank if you don't want to change it)
      = f.password_field :password, autocomplete: "new-password", class: "form-input"
      - if @minimum_password_length
        %em.form-note
          = @minimum_password_length
          characters minimum

    .form-field
      = f.label :password_confirmation, class: "form-label"
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input"

    .form-field
      = f.label :current_password, class: "form-label"
      %i.form-hint (we need your current password to confirm your changes)
      = f.password_field :current_password, autocomplete: "current-password", class: "form-input"

    .form-actions
      = f.submit "Update", class: "form-btn"
